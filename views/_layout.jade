doctype html
html(lang=language, debug='true')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content=t('app:description'))
    meta(name='author', content='https://github.com/jerone')
    title !{title} | #{t('app:title')}
    link(href='/vendor/bootstrap/css/bootstrap.min.css?v=#{deployVersion}', rel='stylesheet')
    link(href='/vendor/bootstrap/css/bootstrap-theme.min.css?v=#{deployVersion}', rel='stylesheet')
    link(href='/css/styles.min.css?v=#{deployVersion}', rel='stylesheet')
    script(src='https://getfirebug.com/firebug-lite.js')
    script(src='/vendor/jquery/jquery.min.js?v=#{deployVersion}')
    script(src='/vendor/bootstrap/js/bootstrap.min.js?v=#{deployVersion}')
    script(src='/js/common.min.js?v=#{deployVersion}')
    block scripts
  body
    include _partials/navbar

    .container
      include _partials/flash
      block content

    include _partials/footer

    script(src='/js/google-analytics.min.js?v=#{deployVersion}')

